package views

import "sihce_diagnosticos/internal/views/components"

templ Home(name string) {
	@Layout("Welcome Home") {
		<div class="container mx-auto p-4 bg-gray-100">
			<h1 class="text-4xl font-bold text-gray-800 mb-4 text-center">Hello, { name }!</h1>
			
			@components.SearchDiagnosticos()

			<div class="mt-12">
				@components.Counter()
			</div>
		</div>
	}
}